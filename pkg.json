{
  "bin": "launcher.js",
  "pkg": {
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist-pkg",
    "assets": [
      "dist/**/*",
      "public/**/*",
      "node_modules/three/examples/jsm/**/*",
      "src/assets/**/*"
    ],
    "scripts": [
      "launcher.js"
    ],
    "compress": true,
    "options": {
      "v8-cache": true,
      "public-packages": "*",
      "public": true,
      "node-args": [
                "--max-old-space-size=4096", 
                "--expose-gc" 
            ]
    }
  }
}
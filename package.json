{
  "name": "hand",
  "version": "1.0.0",
  "main": "main.js",
  "bin": "main.js",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/roboto": "^5.2.5",
    "@mui/icons-material": "^6.4.6",
    "@mui/material": "^6.4.6",
    "@types/three": "^0.174.0",
    "echarts": "^5.6.0",
    "pako": "^2.1.0",
    "three": "^0.174.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "pkg": "^5.8.1",
    "vite": "^6.2.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "pkg:build": "vite build && pkg .",
    "pkg:build:win": "vite build && pkg . --targets node18-win-x64",
    "pkg:build:mac": "vite build && pkg . --targets node18-mac-x64",
    "pkg:build:linux": "vite build && pkg . --targets node18-linux-x64"
  },
  "pkg": {
    "scripts": "main.js",
    "assets": "dist/**/*",
    "targets": [
      "node18-win-x64",
      "node18-mac-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist_pkg"
  },
  "build": {
    "appId": "com.hand.app",
    "productName": "3D可视化分析系统",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
